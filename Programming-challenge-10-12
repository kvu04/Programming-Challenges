numlist = [1, 3, 5, 2, 6, 4, 7]

direction = input("asc, desc, or none?")

if direction == "asc":
    numlist.sort()
    print(numlist)
elif direction == "desc":
    numlist.sort(reverse = True)
    print(numlist)
elif direction == "none":
    print(numlist)
else:
    print("You did not input the correct sorting.")
